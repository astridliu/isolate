.modal-back {
  position: fixed; /* Stay in place */
  z-index: 2; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto; /* Enable scroll if needed */
  background-color: #000; /* Fallback color */
  background-color: rgba(0,0,0,0.9); /* Black w/ opacity */
}

.modal-content {
  display: flex;
  outline: none;
}

.modal-content img {
  margin: auto;
  background: url("../assets/checker-square.png");
}

.modal-zoomed {
  .modal-content {
    padding: 0px;
    width: 100vw;
    height: 100vh;
  }

  #unzoom {
    display: block;
  }
  #zoom {
    display: none;
  }

  header {
    color: rgba(0,0,0,0)
  }
  header:hover {
    color: var(--modal-fg);
  }
}

.modal-unzoomed {
  .modal-content {
    padding: 50px;
    width: 100vw;
    height: 100vh;
  }

  .modal-content img {
    max-width: 100%;
    max-height: 100%;
  }

  #unzoom {
    display: none;
  }
  #zoom {
    display: block;
  }

  header {
    color: var(--modal-fg);
  }
}

.modal-container header {
  z-index: 2; /* Sit on top */
  position: fixed;
  width: 100%;
  height: 2em;
  padding: 1em;
  font-size: 12px;
  line-height: 14px;
}

.modal-container header a {
  color: inherit;
  text-decoration: none;
}

.viewer-metadata {
  width: 500px;
  margin-left: 75px;

  .tag::before {
    content: "#";
  }
}

.modal-controls {
  position: fixed;
  right: 50px;
  top: 10px;
  font-size: 2em;
  font-weight: bold;

  span {
    float: right
    padding-left: 10px;
  }

  span:hover, span:focus {
    cursor: pointer;
    color: var(--modal-fg-bright);
  }
}

.dragndrop {
  position: absolute;
  top: 200px;
  left: 50%;
  margin-left: -140px;
  width: 280px; // from measuring
  text-align: center;

  img {
    width: 128px;
  }
}